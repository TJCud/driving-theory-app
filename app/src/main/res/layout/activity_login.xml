<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin"
    android:background="@drawable/bg_login"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    android:fitsSystemWindows="false">

    <!--Page Title-->


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="#B3ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/robotocondensedlight"
        android:hint="@string/username"
        android:inputType="text"
        android:maxLength="16"
        android:maxLines="1"
        android:padding="20dp"
        android:paddingTop="100dp"
        android:textColor="#000000"
        android:textColorHint="#5c5c5c" />

    <TextView
        android:id="@+id/tvUsernameWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/etEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-15dp"
        android:fontFamily="@font/robotocondensedlight"
        android:paddingLeft="20dp"
        android:text="Username Warning"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />



    <!--Email Field-->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsername"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:background="#B3ffffff"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/robotocondensedlight"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:maxLength="100"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#5c5c5c" />

    <TextView
        android:id="@+id/tvEmailWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/etPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-15dp"
        android:fontFamily="@font/robotocondensedlight"
        android:paddingLeft="20dp"
        android:text="Email Warning"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />






    <!--Password Field-->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:background="#B3ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/robotocondensedlight"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="32"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#5c5c5c" />

    <TextView
        android:id="@+id/tvPasswordWarning"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/etPasswordConfirm"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-15dp"
        android:fontFamily="@font/robotocondensedlight"
        android:paddingLeft="20dp"
        android:text="Password Warning"
        android:textColor="@color/black"
        android:textStyle="bold" />



    <!--Password Field-->
    <EditText
        android:id="@+id/etPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:background="#B3ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/robotocondensedlight"
        android:hint="@string/confirmpassword"
        android:inputType="textPassword"
        android:maxLength="32"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#5c5c5c" />

    <TextView
        android:id="@+id/tvPasswordConfirmWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPasswordConfirm"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-15dp"
        android:fontFamily="@font/robotocondensedlight"
        android:paddingLeft="20dp"
        android:text="Password Warning"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/pbProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvProgressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pbProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/robotocondensedlight"
        android:text="Connecting..."
        android:textColor="@color/black"
        android:textSize="20dp" />




        <!--Login Button-->


    <Button
        android:id="@+id/signInBtn"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@id/etPasswordConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="#ffffff"
        android:fontFamily="@font/robotocondensedlight"
        android:text="@string/log_in"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@id/signInBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:background="#0Dffffff"
        android:fontFamily="@font/robotocondensedlight"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/guestBtn"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@id/registerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:background="#0Dffffff"
        android:fontFamily="@font/robotocondensedlight"
        android:text="GUEST MODE"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/forgotPasswordBtn"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@id/guestBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:background="#0Dffffff"
        android:fontFamily="@font/robotocondensedlight"
        android:text="FORGOT PASSWORD"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />



</RelativeLayout>




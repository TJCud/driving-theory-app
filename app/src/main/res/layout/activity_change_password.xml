<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_login"
    android:layout_height="match_parent"
  >


    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:background="#B3ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/robotocondensedlight"
        android:hint="New Password"
        android:inputType="textPassword"
        android:maxLength="32"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#5c5c5c" />

<TextView
android:id="@+id/tvPasswordWarning"
android:textSize="12sp"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_above="@id/etNewPasswordConfirm"
android:layout_marginStart="10dp"
android:layout_marginTop="10dp"
android:layout_marginEnd="10dp"
android:layout_marginBottom="-15dp"
android:fontFamily="@font/robotocondensedlight"
android:paddingLeft="20dp"
android:text="Password Warning"
android:textColor="@color/black"
android:textStyle="bold" />



    <!--Password Field-->
    <EditText
        android:id="@+id/etNewPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNewPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:background="#B3ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/robotocondensedlight"
        android:hint="@string/confirmpassword"
        android:inputType="textPassword"
        android:maxLength="32"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#5c5c5c" />

<TextView
android:id="@+id/tvPasswordConfirmWarning"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/etNewPasswordConfirm"
android:layout_marginStart="10dp"
android:layout_marginTop="-2dp"
android:layout_marginEnd="10dp"
android:layout_marginBottom="-15dp"
android:fontFamily="@font/robotocondensedlight"
android:paddingLeft="20dp"
android:text="Password Warning"
android:textColor="@color/black"
android:textSize="12dp"
android:textStyle="bold" />


    <Button
        android:id="@+id/updatePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPasswordConfirmWarning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="Update Password" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    android:weightSum="15"
    tools:context=".ActivityFullExamPreScreen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <TextView
            android:id="@+id/tvExamInfo"
            android:layout_width="wrap_content"
            android:layout_height="404dp"
            android:layout_above="@id/ID_startButton"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="-4dp"
            android:background="#754287f5"
            android:fontFamily="@font/robotocondensedlight"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="You have 57 minutes to answer 50 multiple choice driving theory test questions. At least 43 out of 50 questions must be answered correctly in order to pass the test.\n\nGood luck!"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/ID_startButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#754287f5"
            android:fontFamily="@font/robotocondensedlight"
            android:gravity="center"
            android:text="BEGIN EXAM"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />




    </RelativeLayout>




</LinearLayout>



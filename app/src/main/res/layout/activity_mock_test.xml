<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="16dp"
    tools:context=".MockTestActivity"
    android:background="@drawable/background_daytime"
    >


    <TextView
        android:id="@+id/textQuestionNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1/n"
        android:textColor="@color/white"
        android:textSize="30sp" />



    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="TIMER"
        android:textColor="@color/white"
        android:textSize="30sp"
        />


    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="216dp"
        android:layout_height="166dp"
        android:layout_below="@+id/textQuestionNo"
        android:layout_marginTop="15dp"

        android:text="Question will display here"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/ID_questionImage"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_below="@+id/textQuestionNo"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/textQuestion"
        android:src="@drawable/roundabout" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_below="@id/textQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginBottom="10dp">


        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/checkbox_background"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Option 1"
            android:textSize="20sp" />


        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/checkbox_background"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Option 2"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/checkbox_background"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Option 3"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/checkbox_background"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Option 4"
            android:textSize="20sp" />


    </RadioGroup>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic" />





</RelativeLayout>

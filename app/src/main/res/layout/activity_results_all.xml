<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#4287f5"
android:weightSum="15"
tools:context=".ActivityResultsAll">


    <RelativeLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="2"
        android:background="#4287f5"

        >

        <ImageView
            android:id="@+id/ID_returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@id/tvPageHeader"
            android:paddingRight="5dp"
            android:src="@drawable/ic_backarrow" />


        <TextView
            android:id="@+id/tvPageHeader"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/robotocondensedlight"
            android:gravity="center"
            android:text="Track Progress"
            android:textColor="@color/white"
            android:textSize="35dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/robotocondensedlight"
        android:layout_below="@id/topHeader"
        android:layout_weight="2"
        android:background="#e6e6ff">


        <TextView
            android:id="@+id/tvTestStats"
            android:fontFamily="@font/robotocondensedlight"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:scrollbars="vertical"
            android:text="STATS"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal" />


        <ListView
            android:id="@+id/allResultsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvTestStats"
            android:fontFamily="@font/robotocondensedlight"
            android:paddingBottom="0dp" />


    </RelativeLayout>

</LinearLayout>















